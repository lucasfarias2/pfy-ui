{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["vite.config.ts", "dist", "node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
